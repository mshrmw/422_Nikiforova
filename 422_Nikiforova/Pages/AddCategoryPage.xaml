<Page x:Class="_422_Nikiforova.Pages.AddCategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_422_Nikiforova.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="250" d:DesignWidth="700"
      Title="Добавить категорию">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Название категории" FontSize="20" Margin="50,0,459,0" />
        <TextBox x:Name="TBCategoryName" Text="{Binding Name}" ToolTip="Название категории" FontSize="20" Margin="348,0,40,0" />
        <Button x:Name="ButtonSaveCategory" Content="Сохранить" ToolTip="Кнопка сохранить" Grid.Row="1" Click="ButtonSaveCategory_Click" Margin="285,15,285,0" VerticalAlignment="Top"/>
        <Button x:Name="ButtonClean" Content="Очистить" ToolTip="Кнопка очистить" Grid.Row="1" Click="ButtonClean_Click" Margin="285,75,285,0" VerticalAlignment="Top" />
    </Grid>
</Page>
