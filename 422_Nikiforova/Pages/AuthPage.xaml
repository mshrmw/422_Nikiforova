<Page x:Class="_422_Nikiforova.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_422_Nikiforova.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">
    <Grid HorizontalAlignment="Center" Width="800" Height="350" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="271*" />
            <ColumnDefinition Width="529*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="217*" />
            <RowDefinition Height="233*" />
        </Grid.RowDefinitions>
        <Label Content="Пароль" x:Name="labelPass" Margin="173,138,0,0" HorizontalAlignment="Left" Width="80" VerticalAlignment="Top" />
        <Label Content="Логин" x:Name="labelLogin" Margin="173,10,0,232" HorizontalAlignment="Left" Width="80" Grid.RowSpan="2" />
        <TextBox x:Name="TextBoxLogin" Background="Transparent" Margin="60,0,0,75" TextWrapping="Wrap" ToolTip="Введите логин или почту" TextChanged="TextBoxLogin_TextChanged" Height="34" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="140" Grid.Column="1" />
        <PasswordBox x:Name="PasswordBox" Background="Transparent" ToolTip="Введите пароль" Margin="0,0,333,0" HorizontalAlignment="Right" Width="140" Height="32" VerticalAlignment="Bottom" Grid.Column="1" />
        <Button x:Name="ButtonEnter" Margin="60,20,0,0" Height="34" Content="Вход" ToolTip="Кнопка входа" Grid.Row="1" HorizontalAlignment="Left" Width="140" VerticalAlignment="Top" Grid.Column="1" Click="ButtonEnter_OnClick" />
        <Button x:Name="ButtonReg" Margin="60,64,0,0" Height="37" Content="Регистрация" ToolTip="Кнопка регистрации" Grid.Row="1" HorizontalAlignment="Left" Width="140" VerticalAlignment="Top" Grid.Column="1" Click="ButtonReg_Click" />
        <Button x:Name="ButtonChangePassword" Margin="60,112,0,0" Height="37" Content="Смена пароля" ToolTip="Кнопка смены пароля" Grid.Row="1" HorizontalAlignment="Left" Width="140" VerticalAlignment="Top" Grid.Column="1" Click="ButtonChangePassword_Click" />
        <TextBox Grid.Column="1" CommandManager.PreviewExecuted="textBox_PreviewExecuted" ContextMenu="{x:Null}" Visibility="Hidden" x:Name="captcha" Height="42" Foreground="Red" FontStyle="Italic" FontWeight="Heavy" VerticalAlignment="Top" Width="156" Background="{x:Null}" FontStretch="UltraCondensed" IsReadOnly="True" HorizontalContentAlignment="Center" HorizontalAlignment="Right" Margin="0,96,322,0" VerticalContentAlignment="Center" FontSize="20" />
        <TextBox Grid.Column="1" Grid.Row="1" Visibility="Hidden" x:Name="captchaInput" HorizontalAlignment="Left" Height="34" Margin="49,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="160" />
        <Button x:Name="submitCaptcha" Margin="69,66,0,0" Visibility="Hidden" Height="34" Content="Подтвердить" ToolTip="Подтвердить ввод капчи" Grid.Row="1" HorizontalAlignment="Left" Width="120" VerticalAlignment="Top" Grid.Column="1" Click="submitCaptcha_Click"/>
        <Label Content="Капча:" Name="labelCaptcha" Margin="178,105,0,0" HorizontalAlignment="Left" Width="80" Visibility="Hidden" VerticalAlignment="Top"/>
    </Grid>
</Page>
