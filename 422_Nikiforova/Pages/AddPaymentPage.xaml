<Page x:Class="_422_Nikiforova.Pages.AddPaymentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_422_Nikiforova.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="Добавить платеж">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Название платежа" FontSize="20" Margin="50,20,565,0" VerticalAlignment="Top" />
        <TextBox x:Name="TBPaymentName" ToolTip="Название платежа" Text="{Binding Name}" FontSize="20" Margin="380,20,20,0" VerticalAlignment="Top" />
        <TextBlock Text="Сумма" FontSize="20" Margin="50,66,678,0" VerticalAlignment="Top" />
        <TextBox x:Name="TBAmount" ToolTip="Сумма" Text="{Binding Price}" FontSize="20" Margin="380,69,20,0" VerticalAlignment="Top"/>
        <Button x:Name="ButtonSave" Content="Сохранить" ToolTip="Кнопка сохранить" Grid.Row="2" Click="ButtonSave_Click" Margin="557,72,113,0" VerticalAlignment="Top" />
        <Button x:Name="ButtonClean" Content="Очистить" ToolTip="Кнопка очистить" Grid.Row="2" Click="ButtonClean_Click" Margin="72,72,598,0" VerticalAlignment="Top"/>
        <TextBlock Grid.Row="1" FontSize="20" Margin="50,0,625,0" VerticalAlignment="Top" ><Run Language="ru-ru" Text="Количество" /></TextBlock>
        <TextBox x:Name="TBCount" Grid.Row="1" Text="{Binding Num}" FontSize="20" ToolTip="Количество" Margin="380,0,20,0" VerticalAlignment="Top" />
        <TextBlock Grid.Row="1" FontSize="20" Margin="50,0,688,0" ><Run Language="ru-ru" Text="Дата"/></TextBlock>
        <TextBox x:Name="TBDate" Grid.Row="1" Text="{Binding Date}" ToolTip="Дата" FontSize="20" Margin="380,0,20,0"/>

        <ComboBox x:Name="CBUser" Grid.Row="1" SelectedValuePath="ID" SelectedValue="{Binding Path=UserID}" Height="30" ToolTip="Выбор клиента" Margin="380,83,20,3"/>
        <ComboBox x:Name="CBCategory" Grid.Row="2" SelectedValuePath="ID" SelectedValue="{Binding Path=CategoryID}" Height="30" ToolTip="Выбор категории" Margin="380,17,20,70"/>
        <TextBlock Grid.Row="1" FontSize="20" Margin="50,86,625,0" VerticalAlignment="Top"><Run Text="ID"/><Run Language="ru-ru" Text=" клиента"/></TextBlock>
        <TextBlock Grid.Row="2" FontSize="20" Margin="50,19,598,0" VerticalAlignment="Top" ><Run Text="ID"/><Run Language="ru-ru" Text=" категории"/></TextBlock>
    </Grid>
</Page>
