<Page x:Class="_422_Nikiforova.Pages.AddUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_422_Nikiforova.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавить пользователя">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Text="Логин" Grid.Row="0" Grid.Column="0" Margin="10,0,0,0" FontSize="20" />
        <TextBlock Text="Пароль" Grid.Row="1" Grid.Column="0" Margin="10,0,0,0" FontSize="20" />
        <TextBlock Text="Роль" Grid.Row="2" Grid.Column="0" Margin="10,0,0,0" FontSize="20" />
        <TextBlock Text="ФИО" Grid.Row="3" Grid.Column="0" Margin="10,0,0,0" FontSize="20" />
        <TextBlock Text="Фото (необязательно)" Grid.Row="3" Grid.Column="0" Margin="10,64,573,0" FontSize="20" Grid.ColumnSpan="2" Grid.RowSpan="2" />
        <TextBox x:Name="TBLogin" Text="{Binding Login}" Grid.Row="0" ToolTip="Введите логин" Grid.Column="1" Margin="156,5,71,5" FontSize="20" />
        <TextBox x:Name="TBPass" Text="{Binding Password}" Grid.Column="1" ToolTip="Введите пароль" Margin="156,5,71,5" Grid.Row="1" FontSize="20"/>
        <ComboBox Name="cmbRole" SelectedItem="{Binding Role}" ToolTip="Ввыберите роль" Grid.Row="2" Grid.Column="1" Margin="156,5,71,5">
            <ComboBoxItem Content="Admin" />
            <ComboBoxItem Content="User" />
        </ComboBox>
        <TextBox x:Name="TBFio" Text="{Binding FIO}" Grid.Row="3" ToolTip="Введите ФИО" Grid.Column="1" Margin="156,5,71,5" FontSize="20"/>
        <TextBox x:Name="TBPhoto" Text="{Binding Photo}" Grid.Row="4" ToolTip="Добавте фото" Grid.Column="1" Margin="156,5,71,4" FontSize="20"/>
        <Button x:Name="ButtonSave" Content="Сохранить" ToolTip="Кнопка сохранить" Grid.Row="5" Click="ButtonSave_Click" Grid.ColumnSpan="2" Margin="0,0,50,0" HorizontalAlignment="Right" />
        <Button x:Name="ButtonClean" Content="Очистить" ToolTip="Кнопка очистить" Grid.Row="5" Click="ButtonClean_Click" Grid.ColumnSpan="2" Margin="50,0,0,0" HorizontalAlignment="Left" />
    </Grid>
</Page>
