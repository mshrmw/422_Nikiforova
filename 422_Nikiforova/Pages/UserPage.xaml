<Page x:Class="_422_Nikiforova.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_422_Nikiforova.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Страница студента">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Введите ФИО для поиска:" VerticalAlignment="Center"/>
            <TextBox x:Name="fioFilterTextBox" Margin="7,7,0,7" MinWidth="100" TextChanged="fioFilterTextBox_TextChanged" ToolTip="Введите ФИО для поиска"/>
            <TextBlock Text="Сортировка по ФИО:" Margin="10,0,0,0" VerticalAlignment="Center"/>
            <ComboBox SelectionChanged="sortComboBox_SelectionChanged" Margin="7,0,0,0" x:Name="sortComboBox" SelectedIndex="0" VerticalContentAlignment="Center" VerticalAlignment="Center" ToolTip="Выберите сортировку">
                <ComboBoxItem Content="По возрастанию"/>
                <ComboBoxItem Content="По убыванию"/>
            </ComboBox>
            <CheckBox IsChecked="False" Checked="onlyAdminCheckBox_Checked" Unchecked="onlyAdminCheckBox_Unchecked" Content="Только администраторы" x:Name="onlyAdminCheckBox" VerticalContentAlignment="Center" Margin="10,0,0,0" ToolTip="Вывод только администраторов"/>
            <Button x:Name="clearFiltersButton" Content="Очистить фильтр" Click="clearFiltersButton_Click_1" ToolTip="Кнопка очистить фильтр"/>
        </WrapPanel>
        <ListView Name="ListUser" Grid.Row="1" HorizontalContentAlignment="Center" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">

                    </WrapPanel>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="200"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Image Width="200" Grid.Row="1" Stretch="UniformToFill" HorizontalAlignment="Center">
                            <Image.Source>
                                <Binding Path="Photo">
                                    <Binding.TargetNullValue>
                                        <ImageSource>images/default.png</ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>
                        <TextBlock VerticalAlignment="Center" TextAlignment="Center" Width="200" Grid.Row="0" TextWrapping="Wrap" Text="{Binding FIO}" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold"/>
                        <TextBlock VerticalAlignment="Center" TextAlignment="Left" Width="200" Grid.Row="2" HorizontalAlignment="Center" FontSize="18" Text="{Binding Role}"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
