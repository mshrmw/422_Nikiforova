<Window x:Class="_422_Nikiforova.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_422_Nikiforova"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="Payment" Height="450" Width="800" Closing="Window_Closing" Background="Pink">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        <Frame x:Name="MainFrame" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" NavigationUIVisibility="Hidden"/>
        <TextBlock x:Name="DateTimeNow" HorizontalAlignment="Left" Margin="522,0,0,0" Grid.Row="2" VerticalAlignment="Center" Grid.Column="1"/>
        <Button Content="Назад" x:Name="Window_Back" HorizontalAlignment="Left" Grid.Row="0" ToolTip="Кнопка назад" Click="Window_Back_Click"/>
        <Button x:Name="ChangeThemeButton" Content="Темная тема" Click="ChangeThemeButton_Click" HorizontalAlignment="Right" Grid.Row="0" ToolTip="Кнопка смены темы"/>



    </Grid>
</Window>
